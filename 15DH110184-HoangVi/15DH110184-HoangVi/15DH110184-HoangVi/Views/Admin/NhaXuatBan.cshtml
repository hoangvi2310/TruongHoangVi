@model IEnumerable<_15DH110184_HoangVi.Models.NHAXUATBAN>

@{
    ViewBag.Title = "NhaXuatBan";
    Layout = "~/Views/Shared/_LauoutAdmin.cshtml";
}

<h2>NhaXuatBan</h2>

<p>
    @Html.ActionLink("Thêm Nhà Xuất Bản", "ThemNhaXuatBan")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diachi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diachi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.ActionLink("Xóa Nhà Xuất Bản", "XoaNhaXuatBan", new { id=item.MaNXB })
        </td>
    </tr>
}

</table>
